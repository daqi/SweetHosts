{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@renderer/*": ["src/switchhosts/renderer/*"],
      "@/*": ["SwitchHosts/src/*"],
      "@common/*": ["SwitchHosts/src/common/*"],
      "@assets/*": ["SwitchHosts/assets/*"],
      "@styles/*": ["src/switchhosts/renderer/styles/*"],
      "@root/*": ["SwitchHosts/*"],
      "@main/*": ["SwitchHosts/src/main/*"],
      "@src/*": ["SwitchHosts/src/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
